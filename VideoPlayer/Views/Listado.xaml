<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoPlayer.Views.Listado"
             x:Name="estaPagina"
             Title="Videos">


    <StackLayout>
        
        <ListView x:Name="viewListado" SelectionMode="Single" BackgroundColor="black" ItemSelected="OnItemSelected">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        
        </ListView>

    </StackLayout>
</ContentPage>